@using RockyModels.ViewModel;
@using RockyUtility;
@model ProductUserVM

<form method="post">
    <br />
    <div class="backgroundWhiteBorder">
        <div class="container">
            <div class="card">
                <div class="card-header bg-dark text-light ml-0 row container">
                    <div class="col-6">
                        <i class="fa fa-shopping-cart"></i> &nbsp;
                        Order Summary
                    </div>
                    <div class="col-6 text-right">
                        <a asp-action="Index" asp-controller="Cart" class="btn btn-outline-info btn-sm">Back to Cart</a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="container rounded p-2">
                        <div class="row">
                            <div class="col-12 col-lg-7 pb-4">
                                <div class="row">
                                    <h4 class="d-flex justify-content-between align-items-center mb-3">
                                        <span class="text-info">User Details:</span>
                                    </h4>
                                </div>
                                <div class="row my-1">
                                    <div class="col-3">
                                        <label>Name</label>
                                    </div>
                                    <div class="col-9">
                                        <input type="text" asp-for="AppUser.FullName" class="form-control" />
                                        <span asp-validation-for="AppUser.FullName" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="row my-1">
                                    <div class="col-3">
                                        <label>Phone</label>
                                    </div>
                                    <div class="col-9">
                                        <input type="text" asp-for="AppUser.PhoneNumber" class="form-control" />
                                        <span asp-validation-for="AppUser.PhoneNumber" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="row my-1">
                                    <div class="col-3">
                                        <label>Email</label>
                                    </div>
                                    <div class="col-9">
                                        <input type="text" asp-for="AppUser.Email" class="form-control" />
                                        <span asp-validation-for="AppUser.Email" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-lg-5 row">
                                <div class="col-12">
                                    <h4 class="d-flex justify-content-between align-items-center mb-3">
                                        <span class="text-info">Summary:</span>
                                    </h4>
                                    <ul class="list-group mb-3">

                                        @{
                                            var orderTotal = 0.0;
                                        }

                                        @for (int i = 0; i < Model.Products.Count(); i++)
                                        {
                                            <input asp-for="@Model.Products[i].Id" hidden />
                                            <input asp-for="@Model.Products[i].Name" hidden />
                                            <li class="list-group-item d-flex justify-content-between">
                                                <div>
                                                    <h6 class="my-0">@Model.Products[i].Name</h6>

                                                    @if (User.IsInRole(WebConstant.AdminRole))
                                                    {
                                                        <small class="text-muted">Quant: @Model.Products[i].QuantityTemp</small>
                                                    }
                                                    else
                                                    {
                                                        <small class="text-muted">@string.Format("{0:c0}",@Model.Products[i].Price)</small>
                                                    }
                                                </div>
                                                @if (User.IsInRole(WebConstant.AdminRole))
                                                {
                                                    <span class="text-muted">@string.Format("{0:c0}",@Model.Products[i].Price*Model.Products[i].QuantityTemp)</span>
                                                }
                                            </li>
                                            orderTotal += @Model.Products[i].Price * Model.Products[i].QuantityTemp;
                                        }
                                        @if (User.IsInRole(WebConstant.AdminRole))
                                        {
                                            <li class="list-group-item d-flex justify-content-between">
                                                <small class="text-info">Total:</small>
                                                <strong class="text-info">@string.Format("{0:c0}",@orderTotal)</strong>
                                            </li>
                                        }
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="row">
                        <div class="col-12 col-md-5 offset-md-7">
                            <button type="submit" class="btn btn-primary form-control">Submit Inquiry</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>


@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}