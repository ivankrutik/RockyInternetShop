@model IEnumerable<Product>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Products</h2>
        </div>
        <div class="text-right col-6">
            <a asp-action="Upsert" class="btn btn-primary">
                <i class="fa fa-plus"></i> &nbsp; Create new product
            </a>
        </div>
    </div>

    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Product Name
                    </th>
                    <th>
                        Product price
                    </th>
                    <th>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="50%">
                            @obj.Name
                        </td>
                        <td width="30%">
                            @obj.Price
                        </td>
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a  asp-action="Upsert" asp-route-Id="@obj.Id" class="btn btn-warning mx-2">
                                    <i class="fas fa-edit"></i> &nbsp;  Edit
                                </a>
                                <a  asp-action="Delete" asp-route-Id="@obj.Id" class="btn btn-danger mx-2">
                                    <i class="far fa-trash-alt"></i> &nbsp; Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No product exist</p>
    }
</div>