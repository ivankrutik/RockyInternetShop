@using RockyModels.ViewModel;
@model OrderListVM;

<form method="get">
    <div class="container p-4 my-3">
        <h2 class="tetx-info">Orders managment</h2>
        <div class="border bg-white p-3" style="border-radius:15px;">
            <div class="row">
                <div class="col-12">
                    <div class="row" style="padding-top:10px;">
                        <div class="col-4">
                            @Html.Editor("searchName", new {htmlAttributes = new { @class = "form-control", @placeholder = "Name..." }} )
                        </div>
                        <div class="col-4">
                            @Html.Editor("searchEmail", new {htmlAttributes = new { @class = "form-control", @placeholder = "Email..." }} )
                        </div>
                        <div class="col-4">
                            @Html.Editor("searchPhone", new {htmlAttributes = new { @class = "form-control", @placeholder = "Phone..." }} )
                        </div>
                    </div>

                    <div class="row pt-1">
                        <div class="col-4">
                            @Html.DropDownListFor(x=>x.SelectedStatus, Model.Statuses, "--Orders status--", new {@class = "form-select"})
                        </div>
                        <div class="offset-4 col-4">
                            <button type="submit" class="h-100 btn btn-info form-control">
                                <i class="fas fa-search"></i> Search
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
<hr />


<div class="bg-white p-3">
    <ejs-grid id="Grid" dataSource="@Model.Orders" allowFiltering="true" allowSorting="true" allowPaging="true">
        <e-grid-filtersettings type="Menu"></e-grid-filtersettings>
        <e-grid-loadingIndicator indicatorType="Shimmer"></e-grid-loadingIndicator>
        <e-grid-pagesettings pageSize="5"></e-grid-pagesettings>
        <e-grid-columns>
            <e-grid-column field="Id" headerText="ID" isPrimaryKey="true" textAlign="Right" width="120"></e-grid-column>
            <e-grid-column field="FullName" headerText="Name" textAlign="Right"></e-grid-column>
            <e-grid-column field="Email" headerText="Email" textAlign="Right"></e-grid-column>
            <e-grid-column field="PhoneNumber" headerText="PhoneNumber" textAlign="Right"></e-grid-column>
            <e-grid-column field="OrderStatus" headerText="Status" textAlign="Right"></e-grid-column>
            <e-grid-column field="OrderDate" headerText="Date" textAlign="Right" customFormat="@(new {type = "date", format="dd.mm.yyyy"})"></e-grid-column>

            <e-grid-column field="Id" headerText="" width="90" template="<a rel='nofollow' href='Order/Details/${Id}' class='btn btn-primary' > <i class='fas fa-list' > </i> </a>">
            </e-grid-column>

        </e-grid-columns>
    </ejs-grid>
</div>